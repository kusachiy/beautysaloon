<Page x:Class="beautysaloon.UI.Pages.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:beautysaloon.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage"
      Loaded="Window_Loaded"
      >

    <Grid>
        
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid x:Name="usersGrid" AutoGenerateColumns="True" IsReadOnly="True">
            </DataGrid>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Width="80" Content="Создать"  Margin="10,0" Click="Button_Click" />
                <Button Width="80" Content="Изменить" Margin="10,0" Click="Button_Click_1" />
            </StackPanel>
        
    </Grid>
</Page>
