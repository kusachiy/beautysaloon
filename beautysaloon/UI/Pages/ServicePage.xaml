<Page x:Class="beautysaloon.Windows.ServicePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beautysaloon.Windows"
        xmlns:models="clr-namespace:beautysaloon.Models"        
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"      
        Title="ServiceWindow" Height="600" Width="1000"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="servicesGrid" AutoGenerateColumns="True" IsReadOnly="True">
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Width="80" Content="Создать"  Margin="10,0" Click="Button_Click" Height="40" VerticalAlignment="Top" />
            <Button Width="80" Content="Изменить" Margin="10,0" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Page>
